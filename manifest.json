{
  "name": "Urban Outfitters Employee Discount",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "View employee discount on product detail and product category pages",
  "homepage_url": "https://github.com/knabe/urban-discount",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "permissions": [
    "contentSettings"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://*.urbanoutfitters.com/*/catalog/productdetail.jsp*",
        "*://*.urbanoutfitters.com/*/catalog/category.jsp*"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "js": [
          "src/inject/inject.js"
      ]
  }
],
"web_accessible_resources": ["script.js"]
}
